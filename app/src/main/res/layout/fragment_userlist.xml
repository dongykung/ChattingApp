<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/userProfileView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:foreground="?android:attr/selectableItemBackground">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/userProfileCardView"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="10dp"
            app:cardCornerRadius="25dp"
            app:strokeWidth="0dp"
            app:cardElevation="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/userProfileImageView"
                android:layout_width="62dp"
                android:scaleType="fitXY"
                android:layout_height="62dp"
                />
        </com.google.android.material.card.MaterialCardView>


        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/userInfoTextViewFlow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/userProfileCardView"
            app:layout_constraintTop_toTopOf="@+id/userProfileCardView"
            app:layout_constraintBottom_toBottomOf="@id/userProfileCardView"
            app:flow_maxElementsWrap="1"
            app:flow_wrapMode="aligned"
            app:flow_verticalGap="2dp"
            app:constraint_referenced_ids="userName,userStatusMessage"/>
<TextView
    android:id="@+id/userName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:text="username"
    tools:text="username"/>
        <TextView
            android:id="@+id/userStatusMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/grey3"
            android:visibility="gone"
            android:textSize="13sp"
            android:text="username"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/userProfileCardView"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/statusmeesage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/userProfileCardView"
            app:layout_constraintBottom_toBottomOf="@+id/userProfileCardView"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/transparent"
            android:elevation="10dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            app:strokeWidth="1dp"
            android:textSize="12sp"
            app:strokeColor="@color/grey"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/homeview1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@+id/userProfileView"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userlistRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/homeview1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>